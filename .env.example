# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://guwahatiflavors.com
NEXT_PUBLIC_SITE_NAME="Guwahati Flavors"

# Contact Information
NEXT_PUBLIC_PHONE_NUMBER=+919876543210
NEXT_PUBLIC_EMAIL=info@guwahatiflavors.com
NEXT_PUBLIC_ADDRESS="123 Main Street, Guwahati, Assam 781001"

# WhatsApp Integration
NEXT_PUBLIC_WHATSAPP_NUMBER=919876543210

# Google Services (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/guwahatiflavors
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/guwahatiflavors
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/guwahatiflavors

# AI Features (Optional)
OPENAI_API_KEY=your_openai_api_key
NEXT_PUBLIC_AI_ENABLED=true

# Database (Optional - for future features)
DATABASE_URL=your_database_url

# Email Service (Optional - for newsletter)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://guwahatiflavors.com